<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/green"/>
            <size
                android:width="30dp"
                android:height="30dp" />
        </shape>
    </item>

    <item
        android:width="9dp"
        android:height="3dp"
        android:left="6dp"
        android:top="20dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#fff" />
            </shape>
        </rotate>
    </item>

    <item
        android:width="19dp"
        android:height="3dp"
        android:left="9dp"
        android:top="16dp">
        <rotate android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="#fff" />
            </shape>
        </rotate>
    </item>
</layer-list>